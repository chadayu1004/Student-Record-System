@model Production.Models.UserLogin
@{
    Layout = null;
}

<html>
<head>
    <title> :: SMS AddUser :: </title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body class="add-wallpaper">
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <img src="~/images/top-header-icons.png" style="height: 50px; width: auto; margin-right: 10px;" />
        <div class="container-fluid">
            <a class="navbar-brand" style="color:aquamarine" href="~/Students/Dashboard">Student Management System <br> ระบบจัดการนักศึกษา</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Added ms-auto class here -->
                    <li class="nav-item">
                        <span class="nav-link" style="color:aquamarine">
                            ยินดีต้อนรับ, @ViewBag.Username
                            @if (Session["LoginID"] != null)
                            {
                                @Session["Firstname"].ToString()
                                <text> ตำแหน่ง </text>
                                @Session["Position"].ToString()
                            }
                        </span>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" style="color:aquamarine" href="~/UserLogins/Adduser">เพิ่มผู้ใช้</a>
                    </li>*@
                    <li class="nav-item">
                        <a href="@Url.Action("logout", "UserLogins")">
                            <img class="img-das" src="~/images/logout-header-icons.png" alt="Logout" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @using (Html.BeginForm("SaveUser", "UserLogins", FormMethod.Post))
    {
        <div class="add-box">
            <div class="flex-container-add">
                <h1 class="text-center">เพิ่มรายชื่อเจ้าหน้าที่ / ผู้ดูแลระบบ</h1>
                <form class="login100-form validate-form" role="form">
                    <br>
                    <div class="wrap-input100 validate-input" data-validate="Valid username is required: ex@abc.xyz">
                        @Html.TextBox("Username", null, new { @class = "input100", @placeholder = "ชื่อผู้ใช้งาน", @required = "required" })
                        <span class="focus-input100"> </span>
                    </div>
                    <br>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.TextBox("Password", null, new { @class = "input100", @placeholder = "รหัสผ่าน", @type = "password" })
                        <span class="focus-input100"> </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.TextBox("Firstname", null, new { @class = "input100", @placeholder = "ชื่อจริง", @required = "required" })
                        <span class="focus-input100"> </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.TextBox("Lastname", null, new { @class = "input100", @placeholder = "นามสกุล", @required = "required" })
                        <span class="focus-input100"> </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.TextBox("Position", null, new { @class = "input100", @placeholder = "ตำแหน่ง", @required = "required" })
                        <span class="focus-input100"> </span>
                        <div class="form-group">
                            <br> @Html.RadioButton("userlevelID", "1")เป็นผู้ดูแลระบบ<br />
                            <br> @Html.RadioButton("userlevelID", "2")เป็นผู้ใช้ทั่วไป<br />
                        </div>
                    </div>
                    <div class="container-fluid">
                        <br><button class="login101-form-btn">บันทึก</button><br>
                        <button type="reset" class="login100-form-btn pt-sm-1">ล้างค่า</button>
                    </div>
                </form>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
            </div>
        </div>
    }
    <footer class="footer">
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            Student Management System : 4121204	การเขียนโปรแกรมภาษาคอมพิวเตอร์ 2
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>
